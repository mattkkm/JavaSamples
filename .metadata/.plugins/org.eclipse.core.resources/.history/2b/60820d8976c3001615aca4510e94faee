import java.util.Scanner;

public class TicTacToe {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int gameOver = 0;
		int[] moves = new int[9];
		Scanner sc = new Scanner(System.in);
		int nextMove;
		int count = 0;
		String board = "";
//		for(int i = 0; i < moves.length; i++){
//			moves[i] = 0;
//		}
		int winner = 0;
		while(gameOver == 0){
			board = getBoardString(moves);
			System.out.println(board);
			System.out.println("Please enter a number 1 - 9: ");
			nextMove = sc.nextInt();


				//checks if valid move on the board
				if(nextMove > 9 || nextMove < 1){
					System.out.println("Not a valid move on the board");
				} 
				else{
					//checks if position has already been played.
					for(int p = 0; p < moves.length; p++){
						System.out.print(moves[p]);
					}
					System.out.println("next move: " + nextMove);
					System.out.println("moves[nextmove-1] : ");
					System.out.println(moves[nextMove - 1]);
//					System.out.println("turn : ");
//					System.out.println(turn);
					if(moves[nextMove - 1] != 1 && moves[nextMove -1] != -1){
						
						System.out.println("Not an available space. \n Please play a valid position");


					}
					else{
						int turn = count % 2;
						if (turn == 0){
							turn = -1;
						}
						else if(turn == 1){
							turn = 1;
						}
					
						moves[nextMove - 1] = turn;
						count = count+1;
					}
				}
			
			winner = checkForWinner(moves);
			System.out.println(count);
			System.out.println(nextMove);
			System.out.println(winner);
			
			if(winner == 1){
				System.out.println("First player wins!");
				gameOver = 1;
			}
			else if(winner == -1){
				System.out.println("Second player wins!");
				gameOver = 1;

			}
		}
		}
	
	public static int checkForWinner(int[] moves){
		int winTracker = 0;
		for(int i = 0; i < moves.length - 2; i++){
			if(moves[i] == 1){
				if(i==0){
					if(moves[1] == 1 && moves[2] == 1){
						winTracker = -1;
					}
					if(moves[4] == 1 && moves[8] == 1){
						winTracker = -1;
					}
					if(moves[3] == 1 && moves[6] == 1){
						winTracker = -1;
					}
				}
				else if(i==1){
					if(moves[4] == 1 && moves[7] == 1){
						winTracker = -1;
					}
				}
				else if(i==2){
					if(moves[5] == 1 && moves[8] == 1){
						winTracker = -1;
					}
					if(moves[4] == 1 && moves[5] == 1){
						winTracker = -1;
					}
				}
				else if(i==3){
					if(moves[4] == 1 && moves[5] == 1){
						winTracker = -1;
					}
				}

				else if(i==6){
					if(moves[7] == 1 && moves[8] == 1){
						winTracker = -1;
					}
				}
			}
			else if(moves[i] == -1){
				if(moves[i] == 1){
					if(i==0){
						if(moves[1] == -1 && moves[2] == -1){
							winTracker = -1;
						}
						if(moves[4] == -1 && moves[8] == -1){
							winTracker = -1;
						}
						if(moves[3] == -1 && moves[6] == -1){
							winTracker = -1;
						}
					}
					else if(i==1){
						if(moves[4] == -1 && moves[7] == -1){
							winTracker = -1;
						}
					}
					else if(i==2){
						if(moves[5] == -1 && moves[8] == -1){
							winTracker = -1;
						}
						if(moves[4] == -1 && moves[5] == -1){
							winTracker = -1;
						}
					}
					else if(i==3){
						if(moves[4] == -1 && moves[5] == -1){
							winTracker = -1;
						}
					}

					else if(i==6){
						if(moves[7] == -1 && moves[8] == -1){
							winTracker = -1;
						}
					}
				}
			}
		}
		return winTracker;
	}
	public static String getBoardString(int[] positions){
		String board = "";
		int middlePiece = 0;

		for(int i = 0; i < positions.length; i++){
			
			//checks if is middle piece
			if(i % 3 == 1){
				middlePiece = 1;
				board = board + " | ";
			}
			if(positions[i] == 1){
				board = board + "X";
			}
			else if(positions[i] == -1){
				board = board + "O";
			}
			else{
				board = board + "-";
			}
			if(middlePiece == 1){
				board = board + " | ";
			}
			if(i % 3 == 2){
				board = board + "\n";
			}
			middlePiece = 0;
		}
			
		return board;
	}

}
